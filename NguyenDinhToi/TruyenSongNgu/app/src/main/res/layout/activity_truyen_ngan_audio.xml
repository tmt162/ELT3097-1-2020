<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <Button
            android:textColor="#238A81"
            android:text="Truyen Vua Doc"
            android:background="@drawable/buttonmain"
            android:layout_width="137dp"
            android:layout_height="match_parent"/>
        <Button
            android:textColor="#238A81"
            android:text="Truyen Ke Tiep"
            android:background="@drawable/buttonmain"
            android:layout_width="137dp"
            android:layout_height="match_parent"/>
        <Button
            android:textColor="#238A81"
            android:text="Tim"
            android:background="@drawable/buttonmain"
            android:layout_width="137dp"
            android:layout_height="match_parent"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/button_truyen_ngan_audio_1"
            android:textColor="#000000"
            android:fontFamily="casual"
            android:gravity="center|left"
            android:text="Story 1: The Eight"
            android:background="@drawable/button_truyenngan_audio"
            android:layout_width="match_parent"
            android:layout_height="100dp"/>
        <Button
            android:id="@+id/im_her_father"
            android:textColor="#000000"
            android:gravity="left|center"
            android:fontFamily="casual"
            android:text="Story 2: I'M HER FATHER"
            android:background="@drawable/button_truyenngan_audio"
            android:layout_width="match_parent"
            android:layout_height="100dp"/>
        <Button
            android:id="@+id/i_thought_you_called"
            android:gravity="center|left"
            android:fontFamily="casual"
            android:textColor="#000000"
            android:text="Story 3: I Thought you called the next "
            android:background="@drawable/button_truyenngan_audio"
            android:layout_width="match_parent"
            android:layout_height="100dp"/>
        <Button
            android:id="@+id/turn_out"
            android:gravity="left|center"
            android:fontFamily="casual"
            android:textColor="#000000"
            android:background="@drawable/button_truyenngan_audio"
            android:text="Story 4: Turn out"
            android:layout_width="match_parent"
            android:layout_height="100dp"/>
        <Button
            android:id="@+id/polite"
            android:gravity="center|left"
            android:fontFamily="casual"
            android:background="@drawable/button_truyenngan_audio"
            android:textColor="#000000"
            android:text="Story 5: Polite"
            android:layout_width="match_parent"
            android:layout_height="100dp"/>
        <Button
            android:id="@+id/clever"
            android:fontFamily="casual"
            android:gravity="left|center"
            android:textColor="#000000"
            android:text="Story 6: CLEVER"
            android:background="@drawable/button_truyenngan_audio"
            android:layout_width="match_parent"
            android:layout_height="100dp"/>
    </LinearLayout>
</LinearLayout>